@{
    ViewData["Title"] = "Home Page";
}

    <style>
        body {
            background-image: url("http://www.birds.com/wp-content/uploads/home/bird4.jpg");
        }

        h1 {
            color: blue;
        }

    </style>

    <body>
        <div class="text-center">
            <h1 class="display-4">Welcome</h1>
            <p>Upload pictures to create a Powerpoint presentation! <br /> <a href="https://cat-bounce.com/">Click here</a> for more information.</p>
            <br />
        </div>

        <form method="post" enctype="multipart/form-data" asp-controller="FileUpload" asp-action="Index">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload one or more files using this form:</p>
                    <input type="file" name="files" multiple />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>
    </body>


